{ "_id": {"$ObjectId": "4ebc890dc4fe78be1a000001"}
, "id": "http://magnode.org/Page"
, "label": "Plain page"
, "description": "A static page of content with no author or timestamp"
, "collection": "page"
, "put": { "insertRevision": "revision", "storeResource": "page" }
, "menu":
	{ "http://localhost/Menu_ManagementMenu":
		{ "title": "Pages"
		, "weight": 0
		}
	}
, "$schema": "http://json-schema.org/draft-04/schema#"
, "type": "object"
, "links":
	[ {"rel":"type", "href":"http://magnode.org/Page"}
	, {"rel":"type", "href":"{+subject}"}
	]
, "required": ["subject", "type", "created"]
, "properties":
	{ "_id":
		{ "instance": "ObjectId"
		, "widget": "http://magnode.org/field/ObjectId"
		, "readonly": true
		}
	, "subject":
		{ "type": "string"
		, "format": "uri"
		}
	, "type":
		{ "type": "array"
		, "widget": "http://magnode.org/field/Taxonomy"
		, "items": { "type": "string", "format": "uri" }
		, "taxonomySources":
			[
				{ "taxonomyFilter": "http://magnode.org/MongoDBJSONSchema"
				, "type": "string"
				, "label": "Schema"
				, "format": "uri"
				, "widget": "http://magnode.org/field/selectresource"
				, "range": "http://magnode.org/MongoDBJSONSchema"
				, "selectLabel": "label"
				, "selectNull": true
				, "undefinedIf": ["",null]
				, "default": ""
				}
			,
				{ "taxonomyFilter": "http://magnode.org/PublishOption"
				, "type": "array"
				, "label": "Publishing Options"
				, "format": "uri"
				, "widget": "http://magnode.org/field/selectresource"
				, "range": "http://magnode.org/PublishOption"
				, "selectLabel": "label"
				, "selectMulti": "checkbox"
				}
			]
		}
	, "label":
		{ "type": "string"
		, "widget": "http://magnode.org/field/Label"
		}
	, "menu":
		{ "type": "object"
		, "additionalProperties":
			{ "type": "object"
			, "properties":
				{ "title": {"type": "string"}
				, "href": {"type":"string", "format":"uriref"}
				, "weight": {"type":"integer"}
				}
			, "additionalProperties": false
			, "default": {"title":"", "href":"", "weight":0}
			}
		, "additionalPropertiesName":
			{ "type": "string"
			, "format": "uri"
			, "widget": "http://magnode.org/field/selectresource"
			, "range": "http://magnode.org/LinkMenu"
			, "selectLabel": "label"
			, "selectNull": true
			, "undefinedIf": ["", null]
			, "default": ""
			, "escape": "mongodb"
			}
		, "default": {}
		}
	, "created":
		{ "instance":"Date"
		}
	, "owner":
		{ "instance": "ObjectId"
		, "widget":"http://magnode.org/field/ObjectId"
		}
	, "body":
		{ "type": "string"
		, "widget": "http://magnode.org/field/HTML"
		, "default": ""
		}
	}
, "tablequery": {"fields":["_id","subject","label"]}
, "ViewTransform":
	{ "page":
		{ "type": "jade"
		, "file": "template/HTMLBody_typePost.jade"
		}
	}
}
